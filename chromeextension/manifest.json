{
  "name": "Kakparaplu DEV",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "When there is a bullshitstorm, put up your Kakparaplu",
  "homepage_url": "http://frtlzr.com",
  "icons": {
    "16": "icons/open-16.png",
    "48": "icons/open-48.png",
    "128": "icons/open-128.png"
  },
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "bower_components/ddp.js/src/ddp.js",
      "bower_components/q/q.js",
      "bower_components/asteroid/dist/asteroid.chrome.js",
      "bower_components/asteroid/dist/plugins/facebook-login.js",
      "bower_components/asteroid/dist/plugins/google-login.js",
      "dist/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/open-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "bower_components/ddp.js/src/ddp.js",
        "bower_components/q/q.js",
        "bower_components/asteroid/dist/asteroid.chrome.js",
        "bower_components/asteroid/dist/plugins/facebook-login.js",
        "bower_components/asteroid/dist/plugins/google-login.js",
        "bower_components/zepto/zepto.min.js",
        "dist/content_scripts.js"
      ],
      "css": [
        "src/content_scripts/content_scripts.css"
      ],
      "run_at": "document_end"
    }
  ]
}
